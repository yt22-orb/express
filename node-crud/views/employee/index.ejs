<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee List</title>
    <link rel="stylesheet" href="/style.css" /> 
  </head>
  <body>
    <div class="container">
      <h3><a href="/employees/create" class="create-button">Create Employee</a></h3> 
      
      <h1>Employee List</h1>

      <table class="list-table">
        <thead>
          <tr>
            <th>Employee Name</th>
            <th>Position</th>
            <th>Actions</th> 
          </tr>
        </thead>
        <tbody>
          <% employees.forEach(employee => { %>
            
            <tr>
              <td><a href="/employees/show/<%= employee._id %>"><%= employee.name %></a></td>
              <td><%= employee.position %></td>
              <td>
                <a href="/employees/edit/<%= employee._id %>" style="margin-right: 15px;">Edit</a>
                
                <form action="/employees/delete/<%= employee._id %>" method="post" style="display:inline-block; margin: 0;">
                    <button type="submit" style="
                        border: none;
                        background: none;
                        cursor: pointer;
                        color: #dc3545; /* Delete red */
                        font-size: 16px; /* Ensure font size is standard */
                        text-decoration: underline;
                        padding: 0;
                    ">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
          <% if (employees.length === 0) { %>
            <tr>
              <td colspan="3" style="text-align: center; color: #777;">No employees found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>